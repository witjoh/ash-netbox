<%- |
  String $user,
  String $group,
  Stdlib::Absolutepath $netbox_home,
  Stdlib::Absolutepath $pidfile,
  | -%>

[Unit]
Description=NetBox WSGI Service
Documentation=https://netbox.readthedocs.io/en/stable/
After=network-online.target
Wants=network-online.target

[Service]
Type=simple

User=<%= $user %>
Group=<%= $group %>
PIDFile=<%= $pidfile %>
ExecStart=<%= $netbox_home %>/venv/bin/gunicorn --pythonpath <%= $netbox_home %>/netbox --config <%= $netbox_home %>/gunicorn.py netbox.wsgi
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
